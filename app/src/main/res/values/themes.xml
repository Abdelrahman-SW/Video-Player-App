<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LitePlayer" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">#272727</item>
<!--        <item name="colorAccent">@color/black</item>-->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lightBlue</item>
        <item name="colorSecondaryVariant">#028E9F</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:textColorSecondary">@color/gray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <item name="android:editTextColor">#808080</item>
        <item name="android:textColorHint">@android:color/white</item>
        <!-- the app depends on this colors override them in different themes -->
        <item name="android:windowBackground">@color/white</item>
        <item name="IconsColor">@color/lightBlue</item>
        <item name="firstColor">@color/black</item>
        <item name="secondColor">@color/gray</item>
        <item name="toolbarColor">@color/black</item>
        <item name="colorOnToolbar">@color/white</item>
        <item name="backgroundBottomColor">@color/white</item>
        <item name="bottomCircleColor">@color/black</item>
        <item name="bottomIconColor">@color/lightBlue</item>
        <item name="bottomSelectedIconColor">@color/white</item>
        <item name="bottomSheetBackgroundColor">@color/white</item>
        <item name="bottomRippleColor">@color/gray</item>
        <item name="toolbarIconsColor">@color/lightBlue</item>
        <item name="AddPlaylistIconColor">@color/lightBlue</item>
        <item name="bottomSheetTextHeaderColor">@color/gray</item>
        <item name="bottomSheetTextColor">@color/black</item>
        <item name="bottomSheetIconsColor">@color/lightBlue</item>
        <item name="folderColor">#E4E4E4</item>
        <item name="menuIconsColor">@color/lightBlue</item>
    </style>


    <style name="ThemeSettings" parent="Theme.LitePlayer">
        <item name="android:editTextColor">#000000</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColorSecondary">#636363</item>
    </style>


    <style name="ToolbarPopupTheme" parent="Theme.AppCompat.Light">
        <!-- set background color -->
        <!--        <item name="android:paddingRight">4dp</item>-->
        <item name="android:paddingEnd">6dp</item>
        <item name="android:paddingStart">6dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:width">160dp</item>

        <!-- set text color -->
    </style>

    <style name="Theme.LitePlayer.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.LitePlayer.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.LitePlayer.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="bottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
