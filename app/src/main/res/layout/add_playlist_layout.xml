<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/add_playlist_root">

    <androidx.cardview.widget.CardView
        android:layout_marginTop="32dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/bottomSheetBackgroundColor"
            android:orientation="vertical">
            <TextView
                android:layout_marginBottom="8dp"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|start"
                android:maxLines="1"
                android:text="@string/enter_playlist_header"
                android:textColor="@color/gray"
                android:drawablePadding="8dp"
                android:textSize="16sp"
                app:drawableStartCompat="@drawable/gmts_quantum_ic_info_grey_24" />


                <EditText
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:id="@+id/playlistEditTxt"
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:background="@drawable/custombutton"
                    android:gravity="center"
                    android:hint="@string/playlist_hint_header"
                    android:textColorHint="?attr/bottomSheetTextHeaderColor"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:maxLines="2"
                    android:padding="12dp"
                    android:paddingBottom="8dp"
                    android:textAlignment="center"
                    tools:ignore="Autofill" />

            <Button
                android:layout_marginBottom="16dp"
                android:id="@+id/addPlaylistBtn"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:background="@drawable/btnedit"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="15.5sp" />

 </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>