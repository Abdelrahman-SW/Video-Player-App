<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp"
    >



    <ImageView
        android:id="@+id/playlist_item_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/ic_video_camera"
        android:layout_marginEnd="16dp"
        android:layout_gravity="center_vertical"
        />



    <LinearLayout
        android:layout_marginEnd="16dp"
        android:layout_toEndOf="@id/playlist_item_img"
        android:id="@+id/playlistDetails"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <TextView
            android:id="@+id/playlist_item_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/basic"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="?attr/firstColor"
            android:textSize="15sp"
            tools:text="Helllllllllo" />

        <TextView
            android:id="@+id/playlist_item_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="ggggggggggg"
            android:textSize="13sp"
            android:textColor="?attr/secondColor"
            android:lines="1"
            />
    </LinearLayout>



    <ImageView
        android:layout_marginEnd="8dp"
        android:id="@+id/playlist_item_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_baseline_more_vert_24"
        android:layout_gravity="center_vertical|end"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        />
</LinearLayout>